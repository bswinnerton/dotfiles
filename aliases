if [[ "$OSTYPE" == "darwin"* ]]; then
  ## Command line sublime
  alias slime="/Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl"
  alias subl="slime"

  ## Launch services cleanup
  alias lscleanup="/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user && killall Finder"

  ## Start / stop postgres
  alias pg_start="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
  alias pg_stop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

  # Mou
  alias mou="open -a Mou"

  # Javascript Console
  alias jsc="/System/Library/Frameworks/JavaScriptCore.framework/Versions/A/Resources/jsc"
fi

# Kill ruby
alias kill_ruby="killall -9 ruby"

# Generate ctags
alias gtags="ctags -R --exclude=.git --exclude=log \`bundle show --paths\` *"

alias be="bundle exec"

alias tmux="tmux -2"

if [[ -e /Applications/MacVim.app/Contents/MacOS/Vim ]]; then
  alias vi="/Applications/MacVim.app/Contents/MacOS/Vim"
  alias vim="vi"
fi
