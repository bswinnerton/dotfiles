[alias]
  co = checkout
  ci = commit
  st = status
  staged = diff --staged
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[core]
  excludesfile = ~/.gitignore
  editor = /opt/homebrew/bin/nvim
[difftool]
  prompt = false
[mergetool]
  prompt = false
[push]
  default = upstream
[commit]
  gpgsign = true
[sendemail]
  confirm = auto
  smtpServer = smtp.gmail.com
  smtpServerPort = 587
  smtpEncryption = tls
