#!/usr/bin/env ruby

require 'yaml'

database_content = File.read("#{Dir.home}/.databases.yml")
DATABASES = YAML.load(database_content)

unless ARGV.first
  puts 'Please enter a valid database: gasql `app_name`'
  DATABASES.each do |name, database_url|
    puts name
  end
  exit
end

system("psql #{DATABASES[ARGV.first]['database_url']}")
