#!/bin/sh

# Gets around the fork safety problem in OS X.
export OBJC_DISABLE_INITIALIZE_FORK_SAFETY=YES

if [[ `uname -m` == 'arm64' ]]; then
  /opt/homebrew/bin/ansible-playbook $@
else
  # Temporary workaround to solve SSL issues
  #/usr/local/opt/ansible@2.9/bin/ansible-playbook $@
  /usr/local/bin/ansible-playbook $@
fi
