export PATH="$HOME/.bin/:$PATH"
export PATH="/usr/local/heroku/bin:$PATH"
export PATH="$HOME/.rbenv/bin:$PATH"
export PATH="./bin:$PATH"
export EDITOR=vim # To run gem open [gem]
if [[ "$OSTYPE" == "darwin"* ]]; then
  export SSL_CERT_FILE="/usr/local/etc/openssl/certs/cert.pem" # Fix for http://railsapps.github.com/openssl-certificate-verify-failed.html
fi
